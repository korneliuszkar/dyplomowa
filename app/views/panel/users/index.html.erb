<div class="table-responsive">
<table class="table table-bordered">
  <tr>
    <td>Id</td>
    <td>Email</td>
    <td>Data rejestracji</td>
    <td>Rola</td>
    <td></td>
    <td></td>
    <td></td>
  </tr>
  <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.email %></td>
        <td><%= user.created_at %></td>
        <td><%= user.role %></td>
        <td><%= link_to "show", panel_user_path(user.id) %></td>
        <td><%= link_to "edit", edit_panel_user_path(user) %></td>
        <td><%= link_to "delete", panel_user_path(user), remote: false, method: :delete, data: { confirm: 'Are you certain you want to delete this?' }%></td>
      </tr>
  <% end %>
  <tr>
    <td><%= link_to "new user", new_panel_user_path %></td> 
  </tr>
</table>
</div>